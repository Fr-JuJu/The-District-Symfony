              <a class="nav-link active" aria-current="page" href="{{ path('app_index') }}">Accueil</a>
            </li>
            <li class="nav-item col-3 ">
              <a class="nav-link " href="{{ path('app_categorie') }}">Toutes les Catégories</a>
            </li>
            <li class="nav-item col-3 ">
              <a class="nav-link " href="{{ path('app_plat') }}">Plats</a>
            </li>
            <li class="nav-item col-2">
              <a class="nav-link " href="{{ path('app_contact') }}">Contact</a> 

            <li class="nav-item col-2">
              <a class="nav-link " href="{{ path('app_contact') }}"><img src="{{ asset ('/img/images_the_district/panier.png/')}}" width="25%"></a> 
